[general]
accounts = ap4y
pythonfile = ~/.offlineimap.py

[Account ap4y]
localrepository = Local
remoterepository = Remote

[Repository Local]
type = Maildir
localfolders = ~/Maildir

[Repository Remote]
type = IMAP
remotehost = cloud.ap4y.me
remoteuser = ap4y
remotepasseval = get_pass()
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 3
realdelete = no
readonly = false
