!! urxvt
#define commonFont xft:Iosevka Medium:size=10:antialias=true

URxvt.font:           commonFont
URxvt.boldFont:       commonFont
URxvt.italicFont:     commonFont
URxvt.bolditalicFont: commonFont
!! URxvt.letterSpace:    -1
URxvt.internalBorder: 15

URxvt.depth:                  32
URxvt.scrollBar:              false
URxvt.buffered:               true
URxvt.tabbed.autohide:        true
URXvt.tabbed.reopen-on-close: yes

URxvt.perl-ext-common: default,matcher
URxvt.matcher.button:  1
URxvt.url-launcher:    /usr/local/bin/vimb

!! fonts
Xft.dpi:        117
Xft.antialias:  1
Xft.autohint:   0
Xft.rgba:       rgb
Xft.hinting:    1
xft.hintstyle:  hintslight
Xft.lcdfilter:  lcddefault

!! rofi
rofi.font: Iosevka Medium 20
rofi.separator-style: none
rofi.scrollbar-width: 0
