#
# bspwm hotkeys
#

super + alt + Escape
	pkill panel; bspc quit

# Close node
super + w
	bspc node -c

# Toggle monocle
super + t
	bspc desktop -l next

# Balance tree
# super + b
# 	bspc desktop -B

# Toggle tile
super + {a,s,f}
	bspc node focused -t {private,sticky,fullscreen}

# Focus last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# Swap last node/desktop
super + apostrophe
	bspc node -s last

# super + {o,i}
# 	bspc control --record-history off; \
# 	bspc node {older,newer} -f; \
# 	bspc control --record-history on

# Move node into last.manual
super + y
	bspc node -w last.manual

# Move current node to largest space
super + m
	bspc node -s biggest

# Focus/swap node
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {left,down,up,right}

# Focus next/prev node
super + {n,p}
	bspc node -f {next,prev}

# super + {comma,period}
# 	bspc desktop -C {backward,forward}

# Focus next/prev desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# Presel node for splitting
super + ctrl + {h,j,k,l}
	bspc node -p {left,down,up,right}

# super + ctrl + {_,shift + }space
# 	bspc {node -p cancel,desktop -c}

# Resize node
super + alt + {h,j,k,l}
	bspc node -e {left -10,down +10,up -10,right +10}

# Resize node in opposite direction
super + alt + shift + {h,j,k,l}
	bspc node -e {right -10,up +10,down -10,left +10}

# Switch to node
super + ctrl + {1-9}
	bspc node -r 0.{1-9}

# Focus destop or move node to desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#
super + Return
	urxvtc

super + d
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

super+e
  emacsclient -c
  
super+b
  tabbed -c vimb -e
  
super+c
  urxvtc -e weechat

